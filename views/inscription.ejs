<%include ./header%>
            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Inscription
                        </h1>
                        <form method="post">
                        <%if(!previous){%>
                            <p>
                       	    <label>Nom</label>
                            <input type="text" class="form-control" name="nom" required>
                            </p>
                            <p>
                            <label>Prénom</label>
                            <input type="text" class="form-control" name="prenom" required>
                            </p>
                        <%}%>
                        <%if(previous){%>
                            <p>
                            <label>Nom</label>
                            <input type="text" class="form-control" name="nom" value=<%= previous[0]%> required>
                            </p>
                            <p>
                            <label>Prénom</label>
                            <input type="text" class="form-control" name="prenom" value=<%= previous[1]%> required>
                            </p>
                        <%}%>
                        <p>
                        <label>Mot de passe</label>
                        <input type="password" class="form-control" name="mdp" required>
                        </p>
                        <p>
                        <% if(already){%>
                            <div class="form-group has-error">
                                <input type="mail" class="form-control" id="inputError" name="mail">
                                <label class="control-label" for="inputError">Adresse mail déjà utilisée, veuillez en entrer une autre</label>
                            </div>
                        <%}%>
                        <% if(mailfail){%>
                            <div class="form-group has-error">
                                <input type="mail" class="form-control" id="inputError" name="mail">
                                <label class="control-label" for="inputError">Adresse mail invalide, veuillez en entrer une autre</label>
                            </div>
                        <%}%>
                        <%if(!already && !mailfail){%>
                            <label>Email</label>
                            <input type="mail" class="form-control" name="mail" required>
                        </p>
                        <%}%>
                        <button type="submit" class="btn btn-default">Submit Button</button>
                        </form>
                    </div>
                </div>
                <!-- /.row -->

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

</body>

</html>
